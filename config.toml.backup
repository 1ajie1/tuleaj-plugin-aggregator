author = "Tuleaj"
log_level = "INFO"
log_dir = "logs"
max_log_files = 10
log_file_size_mb = 10

[ui]
theme = "auto"
language = "zh_CN"
window_width = 1200
window_height = 800
window_maximized = false
remember_window_state = true

